{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jrnl-ios",
  "version": "0.1.0",
  "identifier": "fm.jrnl.jrnl-ios-app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run generate",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "jrnl-ios",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": {
        "default-src": [
          "'self'"
        ],
        "img-src": [
          "'self' data: https://accounts.google.com https://*.googleusercontent.com"
        ],
        "connect-src": [
          "'self'",
          "https://accounts.google.com",
          "https://oauth2.googleapis.com",
          "https://www.googleapis.com"
        ],
        "script-src": [
          "'self'",
          "'unsafe-inline'",
          "https://accounts.google.com",
          "https://apis.google.com"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'",
          "https://fonts.googleapis.com"
        ],
        "font-src": [
          "'self'",
          "https://fonts.gstatic.com"
        ],
        "frame-src": [
          "'self'",
          "https://accounts.google.com"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
